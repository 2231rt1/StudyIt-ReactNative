// prettier-ignore
{
  "extends": "@react-native/typescript-config/tsconfig.json",   
  "compilerOptions": {
    "jsx": "react-jsx",

    "skipLibCheck": true,                                 

    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "@app/*": ["/src/app/*"],
      "@processes/*": ["/src/processes/*"],
      "@screens/*": ["/src/screens/*"],
      "@widgets/*": ["/src/widgets/*"],
      "@features/*": ["/src/features/*"],
      "@entities/*": ["/src/entities/*"],
      "@shared/*": ["/src/shared/*"],
    },
    "module": "esnext",
  },
  "include": [
    "./**/*",
  ]
}
